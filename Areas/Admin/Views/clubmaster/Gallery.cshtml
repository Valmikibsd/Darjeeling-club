@{
    ViewData["Title"] = "Gallery";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<div class="container-fluid">
    <br>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Gallery</h6>
        </div>
        <div class="card-body">
            <div class="row">
            </div>
            <div class="row">
                <input type="hidden" id="id" value="0" />
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Name</label>
                        <select id="ddlname" class="form-control" tabindex="1">
                            <option value="0">Select Name</option>
                            @if (ViewBag.Category != null)
                            {
                                foreach (var item in ViewBag.Category as List<SelectListItem>)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Gallery</label>
                        <input type="file" class="form-control" id="imgfile" />
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="font-weight-700 font-size-16">Display</label>
                    <input type="checkbox" id="chkStatus" name="status" checked />  Active
                </div>
            </div>
            <div class="form-actions mt-10" id="btnsv">
                <input type="submit" class="btn btn-primary" id="btnsave" onclick="IUGallery()"
                       value="Save" />
            </div>
            <div class="form-actions mt-10" id="btnupdt" style="display:none">
                <input type="submit" class="btn btn-primary" id="btnupdate" onclick="IUpdateGallery()"
                       value="Update" />
            </div>
        </div>
        <div class="col-md-12">
            <table id="data-table" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Gallery</th>
                        <th>Status</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="SubCategorybody"></tbody>
            </table>
        </div>
    </div>

</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="~/js/Gallery.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script type="text/javascript">
    ShowDataInTable();
</script>

