@{
	ViewData["Title"] = "Communication";
	Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<style>
	.modal-lg, .modal-xl {
		max-width: 96%;
	}
</style>


<div class="container-fluid">
	<br>
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">Communication</h6>
		</div>
		<div class="card-body">
			<div class="card-body d-flex">
			<input type="hidden" id="hidcomid" value="0"/>
			<div class="col-lg-4">
				<div class="form-group">
					<label for="Subject">Subject  </label>
					<input type="text" class="form-control form-control-user" id="txtSubject" placeholder="Subject" required="">
				</div>
			</div>

				<div class="col-md-4">
					<label class="font-weight-700 font-size-16">Category</label>
					<select id="ddlcatecory" class="form-control" tabindex="1" onchange="getmemberdata()">

						<option value="0">Select </option>
						@if (ViewBag.bindcat != null)
						{
							foreach (var item in ViewBag.bindcat as List<SelectListItem>)
							{
								<option value="@item.Value">@item.Text</option>
							}
						}
					</select>
				</div>

				<div class="col-md-4">
					<div class="form-group">
						<label class="font-weight-700 font-size-16">File Upload  </label>
						<input type="file" class="form-control" id="imgfile" />
					</div>
				</div>

		
			</div>
			<div class="col-md-12" style="overflow:auto;height:500px;width:360px;float:right;" id="printdiv">
				<table id="memberdata-table" class="table-bordered">
                <thead>
                    <tr>
                        <th>Member Id</th>
                        <th>Member Name</th>
                        <th>Select</th>
                       
                    </tr>
                </thead>
                <tbody class="tblmember"></tbody>
            </table> 
			</div>
			<div class="row">
				<div class="col-md-12" style="margin-top:0px;">
					<div class="form-group">
						<label class="font-weight-700 font-size-16">Description</label>
						<textarea type="text" class="form-control" id="Description"></textarea>


						<div style="clear: both;"></div>

						<script type="text/javascript">
							$(function () {
								CKEDITOR.replace('Description',
									{ filebrowserImageUploadUrl: '/Upload.ashx', filebrowserUploadUrl: '/Upload.ashx' }); //path to “Upload.ashx”
							});
						</script>
					</div>
				</div>
			</div>

			<div class="card-body d-flex">

			<div class="col-md-4">
				<div class="form-group">
					<label class="font-weight-700 font-size-16">Status  </label>
					<input type="checkbox" id="chkStatus" name="status" checked />  Active
				</div>
			</div>


				<div class="form-actions mt-10" id="btnsv">
					<input type="submit" class="btn btn-primary" id="btnsave" onclick="InsertCommunication()"
						   value="Save" />
				</div>

			</div>

			
		</div>
		<div class="col-md-12">
			<table id="data-table1qw" class="table table-bordered">
				<thead>
					<tr>
						<th>Name</th>
						<th>Gallery</th>
						<th>Status</th>
						<th>Edit</th>
						<th>Delete</th>
					</tr>
				</thead>
				<tbody class="SubCategorybody"></tbody>
			</table>
		</div>
		<div class="table-responsive">
			<div class="table table-bordered" width="100%" cellspacing="0">
				<div id="Printdiv1"></div>
			</div>
		</div>
	</div>
</div>



<script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
