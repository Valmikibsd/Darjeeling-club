
@{
    ViewData["Title"] = "Reminder";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<div class="container-fluid">
    <br>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Reminder</h6>
        </div>
        <div class="card-body">
            <div class="row">
            </div>
            <div class="row">
                <input type="hidden" id="id" value="0" />
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Month</label>
                        <select id="ddlmonth" class="form-control" tabindex="1">
                            <option value="0">Select </option>
                           
                                    <option value="1">January</option>
                                    <option value="2">February</option>
                                    <option value="3">March</option>
                                    <option value="4">April</option>
                                    <option value="5">May</option>
                                    <option value="6">June</option>
                                    <option value="7">July</option>
                                    <option value="8">August</option>
                                    <option value="9">September</option>
                                    <option value="10">October</option>
                                    <option value="11">November</option>
                                    <option value="12">December</option>
                               
                        </select>
                    </div>
                </div>
                @*<input type="hidden" id="id" value="0" />*@

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Type</label>
                        <select id="ddlype" class="form-control" tabindex="1">
                            <option value="0">Select </option>

                            <option value="1">First Reminder</option>
                            <option value="2">Second Reminder</option>
                            <option value="3">Final Reminder</option>
                            <option value="4">Termination</option>

                        </select>
                    </div>
                </div>
                <div class="col-md-4" >
                    <label class="font-weight-700 font-size-16">Category</label>
                    <select id="ddlcatecory" class="form-control" tabindex="1" onchange="getmember()">
                        
                        <option value="0">Select </option>
                        @if (ViewBag.bindcat != null)
                        {
                            foreach (var item in ViewBag.bindcat as List<SelectListItem>)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    </select>
                </div>
                
                <div class="col-md-4">
                    <label class="font-weight-700 font-size-16">Member</label>
                    @* <input type="text" id="memberSearch" placeholder="Search member..." class="form-control" /> *@

                     <select id="ddlmember" class="form-control" tabindex="1">
                        
                        <option value="0">Select </option>
                       
                               
                        
                    </select> 
                </div>


                <div class="col-md-4">
                    <label class="font-weight-700 font-size-16">Amount</label>
                 @*  <input type="text" id="txtamount" class="form-control" />  *@
                    <input type="number" id="ddlamount" class="form-control" min="0" step="1" onkeypress="return validateInteger(event)" placeholder="Enter amount (integers only)" required />
                    @* <select id="ddlamount" class="form-control" tabindex="1">

                        <option value="0">Select </option> 
                        <option value="5000">5000 </option>
                        <option value="10000">10000 </option>
                        <option value="15000">15000 </option>



                    </select>*@

                </div>





                @* <div class="col-md-12">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Description</label>
                        <textarea type="text" class="form-control" id="Description"></textarea>


                        <div style="clear: both;"></div>

                        <script type="text/javascript">
                            $(function () {
                                CKEDITOR.replace('Description',
                                    { filebrowserImageUploadUrl: '/Upload.ashx', filebrowserUploadUrl: '/Upload.ashx' }); //path to “Upload.ashx”
                            });
                        </script>
                    </div>
                </div> *@
                
            </div>
            <div class="row" style="margin-top: 10px;">
            <div class="col-md-4" id="btnsv">
                <input type="submit" class="btn btn-primary" id="btnshow"  value="Show" />
                @* <input type="submit" class="btn btn-primary" id="btnshow" onclick="show()" value="Save" /> *@
            </div>
            <div class="col-md-4">
                <input type="submit" class="btn btn-primary" id="btnsave" onclick="Submit()" value="Submit" />
            </div>
            </div>
            
        </div>
        <div class="col-md-12" style="overflow:auto" id="printdiv">
