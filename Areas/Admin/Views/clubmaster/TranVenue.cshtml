@{
    ViewData["Title"] = "Venue";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";

}
<div class="container-fluid">
    <br>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Book A Venue</h6>
        </div>
        <div class="card-body">
            <div class="row">
            </div>
            <div class="row">
                <input type="hidden" id="id" value="0" />
                <input type="hidden" id="txtcgst" value="cgst" />
                <input type="hidden" id="txtsgst" value="sgst" />
                <input type="hidden" id="txtaccharge" value="AC_Charge" />
                <input type="hidden" id="txtmaintenance" value="Maintenance_CHGS" />
                @*<input type="text" id="txtrental" value="rental" />*@
                <input type="hidden" id="txtcurrdate" value="curr_date" />
                <input type="hidden" id="txtcaldate" value="caldate" />
                <input type="hidden" id="txtpartyno" value="partyno" />
                <input type="hidden" id="txtsecuritycharge" value="SecurityCharge" />
                <input type="hidden" id="txttotalvenueamt" value="Totalvenueamt" />
                <input type="hidden" id="txttotalvenuegst" value="totalvenuegst" />
                <input type="hidden" id="txtorderid" value="orderid" />
                <input type="hidden" id="txtflg" value="flg" />
                <input type="hidden" id="txtcancelflg" value="CANCELFLAG" />
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Venue Name</label>
                        <select id="ddlvenueid" class="form-control" tabindex="1" onchange="Bindvenuetypeid()">
                            <option value="0">Select Venue Name</option>
                            @if (ViewBag.Categoryobj != null)
                            {
                                foreach (var item in ViewBag.Categoryobj as List<SelectListItem>)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Venue Type </label>
                        <select id="ddlvenuetypeid" class="form-control" tabindex="1">
                            <option value="0">Select Venue Type</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Member Name</label>
                        <select id="ddlvenuemember" class="form-control" tabindex="1">
                            <option value="0">Select Member</option>
                            @if (ViewBag.Categoryvenue != null)
                            {
                                foreach (var item in ViewBag.Categoryvenue as List<SelectListItem>)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Member Id</label>
                        <input type="text" class="form-control" id="txtmemid" oninput="input()" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Booking Date</label>
                        <input type="date" class="form-control" id="txtdate" />
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Payment Mode</label>
                        <select id="ddlpaymode" class="form-control" tabindex="1">
                            <option value="0">Select Payment Mode</option>
                            @if (ViewBag.Categorypayment != null)
                            {
                                foreach (var item in ViewBag.Categorypayment as List<SelectListItem>)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group" >
                        <label class="font-weight-700 font-size-16">Rent</label>
                        <input readonly class="form-control" id="txtrental" />
                    </div>
                </div>
                <div class="col-md-4" id="rfrnceno" style="display:none">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Reference No</label>
                        <input readonly class="form-control" id="txtreference" />
                    </div>
                </div>
                <div class="col-md-4" id="chkdate" style="display:none">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Check Date</label>
                        <input readonly class="form-control" id="txtcheckdate" />
                    </div>
                </div>
                <div class="col-md-4" id="chkno" style="display:none">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Check No</label>
                        <input readonly class="form-control" id="txtcheckno" />
                    </div>
                </div>
            </div>
            <div class="form-actions mt-10" id="btnsav">
                <input type="button" class="btn btn-primary" id="btnsave" onclick="IUTranVenue()"
                       value="Save" />
            </div>
            <div class="form-actions mt-10" id="btncncl" style="display:none">
                <input type="button" class="btn btn-primary" id="btncancel" onclick="IUCancelBooking()"
                       value="Cancel" />
            </div>

            <div class="form-actions mt-10" id="btnupdt" style="display:none">
                <input type="button" class="btn btn-primary" id="btnupdate" onclick="IUUpdateBooking()"
                       value="Update" />
            </div>
        </div>
        <div class="col-md-12">
            <table id="data-table" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Venue Name</th>
                        <th>Venue Type</th>
                        <th>Member Name</th>
                        <th>Booking Date</th>
                        <th>Payment Mode</th>
                        <th>Status</th>
                        <th>Edit</th>
                        <th>Delete</th>
                        <th>Cancel</th>
                    </tr>
                </thead>
                <tbody class="SubCategorybody"></tbody>
            </table>
        </div>
    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="~/js/TranVenue.js"></script>
<script src="~/js/Todaydate_NowTime.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script type="text/javascript">
    ShowDataInTable();
</script>



