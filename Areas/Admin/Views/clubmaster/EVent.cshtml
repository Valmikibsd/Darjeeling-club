@{
    ViewData["Title"] = "EVent";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";


}

<div class="container-fluid">
    <br>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Event Master</h6>
        </div>
        <div class="card-body">
            <div class="row">
            </div>
            <div class="row">
                <input type="hidden" id="id" value="0" />
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Event Name</label>
                        <input type="text" placeholder="Enter Event Name" class="form-control" id="txteventname" />
                    </div>
                </div>
                @*<input type="hidden" id="id" value="0" />*@

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Event Date</label>
                        <input type="datetime" placeholder="YYYY-MM-DD" class="form-control" id="txteventdate" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Event Image</label>
                        <input type="file" class="form-control" id="imgfile" />
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Description</label>
                        <textarea type="text" class="form-control" id="Description"></textarea>


                        <div style="clear: both;"></div>

                        <script type="text/javascript">
                            $(function () {
                                CKEDITOR.replace('Description',
                                    { filebrowserImageUploadUrl: '/Upload.ashx', filebrowserUploadUrl: '/Upload.ashx' }); //path to “Upload.ashx”
                            });
                        </script>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Display</label>
                        <input type="checkbox" id="chkStatus" name="status" checked />  Active
                    </div>
                </div>
            </div>
            <div class="form-actions mt-10" id="btnsv">
                <input type="submit" class="btn btn-primary" id="btnsave" onclick="IUEvent()"
                       value="Save" />
            </div>
            <div class="form-actions mt-10" id="btnupdt" style="display:none">
                <input type="submit" class="btn btn-primary" id="btnupdate" onclick="IUpdateEvent()"
                       value="Update" />
            </div>
        </div>
        <div class="col-md-12">
            <table id="data-table" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Event Name</th>
                        <th>Event Date</th>
                        <th>Event Image</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="SubCategorybody"></tbody>
            </table>
        </div>
    </div>

</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="~/js/Event.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript" src="/ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="/ckeditor/adapters/jquery.js"></script>
<script type="text/javascript">
    ShowDataInTable();
</script>



