@{
    ViewData["Title"] = "ItemMaster";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout1.cshtml";


}

<div class="container-fluid">
    <br>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Item Master</h6>
        </div>
        <div class="card-body">
            <div class="row">
            </div>
            <div class="row">
                <input type="hidden" id="id" value="0" />
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Item Name</label>
                        <input type="text" placeholder="Enter Item Name" class="form-control" id="txtname" />
                    </div>
                </div>
                @*<input type="hidden" id="id" value="0" />*@
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Item Group Name</label>
                        <select id="ddlgroupitem" class="form-control" tabindex="1" onchange="BindSubcategory()">
                            <option value="0">Select ItemGroup</option>
                            @if (ViewBag.Categoryobj != null)
                            {
                                foreach (var item in ViewBag.Categoryobj as List<SelectListItem>)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Item Sub Group</label>
                        <select id="ddlsubiteam" class="form-control" tabindex="1">
                            <option value="0">Select Sub Item Group</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Item Price</label>
                        <input type="text" placeholder="Enter Item Price" class="form-control" id="txtprice" />
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16">Item Photo</label>
                        <input type="file" class="form-control" id="imgfile" />
                        @*<img id="img" src="~/images/dummy-pic.png" alt="your image" width="75" height="80" />*@
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16" style="margin-top:40px;">Display</label>
                        <input type="checkbox" id="chkStatus" name="status" checked />  Active
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="font-weight-700 font-size-16" style="margin-top:40px;">Image Display</label>
                        <input type="checkbox" id="chkImage" name="imagedisplay" checked />  Show
                    </div>
                </div>
            </div>

            <div class="form-actions mt-10" id="btnsv">
                <input type="button" class="btn btn-primary" id="btnsave" onclick="IUItemMaster()"
                       value="Save" />
            </div>

            <div class="form-actions mt-10" id="btnupdt" style="display:none">
                <input type="button" class="btn btn-primary" id="btnupdate" onclick="IUUpdateItemMaster()"
                       value="Update" />
            </div>
        </div>
        <div class="col-md-12">
            <table id="data-table" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Item Group</th>
                        <th>Item Price</th>
                        <th>Item Sub Group</th>
                        <th>Item Photo</th>
                        <th>Status</th>
                        <th>Image Display</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="SubCategorybody"></tbody>
            </table>
        </div>
    </div>

</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="~/js/ItemMaster.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script type="text/javascript">
    ShowDataInTable();
</script>



